#ifndef ECEF_FRAME_H_
#define ECEF_FRAME_H_

class CECEF_Frame
{
friend CECEF_Frame operator-(CECEF_Frame &f2, CECEF_Frame &f1);
friend long double Distance(CECEF_Frame &f2, CECEF_Frame &f1);

public:
	CECEF_Frame();
	CECEF_Frame(long double x0, long double y0, long double z0);
	~CECEF_Frame();

	long double Distance();

private:
	long double x;
	long double y;
	long double z;

};


#endif /* ECEF_FRAME_H_ */
