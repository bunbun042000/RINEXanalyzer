#ifndef WGS84_FRAME_H_
#define WGS84_FRAME_H_
#include "ECEF_Frame.h"

class CWGS84_Frame
{
public:
	CWGS84_Frame();
	CWGS84_Frame(long double Lat, long double Longi, long double G_Hight);
	CWGS84_Frame(CECEF_Frame ecef_frame);
	~CWGS84_Frame();

	CECEF_Frame ToECEF_Frame();

private:
	static long double GPS_Pi = 3.1415926535898; // From IS-GPS-200G(05 Sep. 2012) p.154
	static long double C_velocity = 2.99792458e8; // From IS-GPS-200G(05 Sep. 2012) p.126
	static long double GMe = 3986004.418e8; // From NIMA TR8350.2 Third Edition (03 Jan. 2000) p. 3-3
	static long double Omega_E = 7292115e-11; // From NIMA TR8350.2 Third Edition (03 Jan. 2000) p. 3-4
	static long double R_Earth = 6378137.0; // From NIMA TR8350.2 Third Edition (03 Jan. 2000) p. 3-5
	static long double F_Earth = 298.257223563; // From NIMA TR8350.2 Third Edition (03 Jan. 2000) p. 3-5

	long double Latitude;
	long double Longitude;
	long double Geoidal_Hight;
};

#endif /* WGS84_FRAME_H_ */
