#ifndef MATRIX_H_
#define MATRIX_H_

#include <cmath>

class CMatrix
{
	CMatrix();
	CMatrix(int col, int lin);
	CMatrix(const CMatrix &mat);
	void ~CMatrix();

	bool SetData(long double x, int column, int line);
	bool SetLine(const long double *line, int max_column);
	bool SetColumn(const long double *column, int max_line);

	int GetMaxColumn()
	{
		return max_col;
	};

	int GetMaxLine()
	{
		return max_line;
	};


private:
	int max_col;
	int max_line;
	long double *data;

};


#endif /* MATRIX_H_ */
