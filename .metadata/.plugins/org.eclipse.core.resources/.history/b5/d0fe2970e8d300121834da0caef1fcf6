#include <cmath>
#include "ECEF_Frame.h"

CECEF_Frame::CECEF_Frame()
{
	x = 0.0;
	y = 0.0;
	z = 0.0;
}
CECEF_Frame::CECEF_Frame(long double x0, long double y0, long double z0)
{
	x = x0;
	y = y0;
	z = z0;
}

CECEF_Frame::CECEF_Frame(const CECEF_Frame &ecef_f)
{
	this->x = ecef_f.x;
	this->y = ecef_f.y;
	this->z = ecef_f.z;
}

CECEF_Frame::~CECEF_Frame()
{
	// Do nothing
}

long double Distance(CECEF_Frame &f2, CECEF_Frame &f1)
{
	CECEF_Frame f = f2 - f1;
	return f.Distance();
}

long double CECEF_Frame::Distance()
{
	return sqrt(pow(x, 2) + pow(y, 2) + pow(z, 2));
}


