#ifndef ENU_FRAME_H_
#define ENU_FRAME_H_

#include "WGS84_Frame.h"

class CENU_Frame : public CWGS84_Frame
{
	friend CWGS84_Frame ENU2WGS84(long double e, long double n, long double u, const CWGS84_Frame &wgs84_orig);
	friend CENU_Frame WGS842ENU(CWGS84_Frame wgs84_f, CWGS84_Frame wgs84_orig);
public:
	CENU_Frame();
	CENU_Frame(const CENU_Frame &enu_f);
	CENU_Frame(long double x_enu, long double y_enu, long double z_enu, const CWGS84_Frame &wgs84_orig);
	CENU_Frame(CWGS84_Frame wgs84_f, CWGS84_Frame wgs84_orig);
	virtual ~CENU_Frame();

protected:
	CWGS84_Frame wgs84_origin;
	long double e;
	long double n;
	long double u;

};

#endif /* ENU_FRAME_H_ */
